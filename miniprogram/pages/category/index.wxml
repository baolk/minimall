<view class="category_index">
    <SearchInput></SearchInput>
    <view class="categoty_container">
        <!-- 左侧菜单栏 -->
        <scroll-view class="left_menu" scroll-y="{{true}}">
            <view class="menu_item {{index===currentIndex?'active':''}}" wx:for="{{leftMenuList}}" wx:key="*this"
                bindtap="handleItemTap" data-index="{{index}}">
                {{item}}
            </view>
        </scroll-view>
        <!-- 右侧商品详情 -->
        <scroll-view scroll-top="{{scrollTop}} " class="right_content" scroll-y="{{true}}">
            <view class="goods_group" wx:for="{{rightContent}}" wx:for-item="item1" wx:for-index="index1">
                <!-- 商品标题 -->
                <view class="goods_title">
                    <text class="delimiter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter">/</text>
                </view>
                <!-- 商品内容 -->
                <view class="goods_list">
                    <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id">
                        <image mode="widthFix" src="{{item2.cat_icon}}" />
                        <view class="goods_name">{{item2.cat_name}}</view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>